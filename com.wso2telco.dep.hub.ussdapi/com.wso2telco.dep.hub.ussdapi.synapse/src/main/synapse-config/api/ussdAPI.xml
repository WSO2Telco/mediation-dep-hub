<?xml version="1.0" encoding="UTF-8"?>
<api context="/ussd" name="ussdAPI" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/outbound/{+msisdn}">
        <inSequence>
        	<sequence key="com.wso2telco.dep.hub.ussdapi.resource.ni.mt.Sequence"/>
        </inSequence>
        <outSequence/>
        <faultSequence>
	    	<sequence key="com.wso2telco.dep.common.response.unexpectedError.Sequence"/>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/inbound/subscriptions">
        <inSequence>
        	<sequence key="com.wso2telco.dep.hub.ussdapi.resource.mo.subscribe.notification.Sequence"/>
        </inSequence>
        <outSequence/>
        <faultSequence>
	    	<sequence key="com.wso2telco.dep.common.response.unexpectedError.Sequence"/>
        </faultSequence>
    </resource>
    <resource methods="DELETE" protocol="http" uri-template="/inbound/subscriptions/{subscriptionID}">
        <inSequence>
            <sequence key="com.wso2telco.dep.hub.ussdapi.resource.mo.unsubscribe.notification.Sequence"/>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <sequence key="com.wso2telco.dep.common.response.unexpectedError.Sequence"/>
        </faultSequence>
    </resource>
    <resource methods="POST" uri-template="/inbound/{notifyURLId}">
        <inSequence>
        	<sequence key="com.wso2telco.dep.hub.ussdapi.resource.inbound.notification.Sequence"/>
        </inSequence>
        <outSequence/>
        <faultSequence>
	    	<sequence key="com.wso2telco.dep.common.response.unexpectedError.Sequence"/>
        </faultSequence>
    </resource>    
</api>
